#
#	Global configuration for SNAP makefiles
#

GLIB = glib-core
SNAP = snap-core

CGLIB = ../$(GLIB)
CSNAP = ../$(SNAP)

EXGLIB = ../../$(GLIB)
EXSNAP = ../../$(SNAP)

UNAME := $(shell uname)
UNAMEO := $(shell uname -o)

ifeq ($(UNAME), Linux)
  # Linux flags
  CC = g++
  CXXFLAGS += -std=c++98 -Wall
  LDFLAGS +=
  LIBS += -lrt

else ifeq ($(UNAME), Darwin)
  # OS X flags
  CC = g++
  CXXFLAGS += -std=c++98 -Wall
  LDFLAGS +=
  LIBS +=

else ifeq ($(UNAMEO), Cygwin)
  # Cygwin flags
  CC = g++
  CXXFLAGS += -Wall
  LDFLAGS +=
  LIBS +=

endif

